<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9B9B9"
    tools:context=".TriarLlumGarantiaGPSPortabidons">


    <RadioGroup
        android:id="@+id/llum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Llum:  "
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:tag="/0.0/Llum no inclosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="true"
            android:text="No" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="Shimano Ultegra/30.0/Llum Shimano Ultegra led"
            android:text="Shimano Ultegra"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30.00€"
            android:textAlignment="gravity" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/garantialy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portabidons">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Garantia: "
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@id/garantia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="Estandard/0.0/Garantia estandard de 3 anys"
                android:text="Garantia estandard de 3 anys"
                android:textAlignment="textStart"/>

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="Ampliada/100.0/Garantia ampliada a 5 anys"
                android:text="Garantia ampliada a 5 anys" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="Ampliada + seguro tot risc/100.0/Garantia ampliada a 5 anys + 1 any de seguro a tot risc "
                android:text="Garantia ampliada + seguro tot risc 1 any" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="74dp"
                android:layout_height="45dp"
                android:text="0.00€"
                android:gravity="center" />
            <TextView
                android:layout_width="74dp"
                android:layout_height="45dp"
                android:text="100.00€"
                android:gravity="center" />
            <TextView
                android:layout_width="74dp"
                android:layout_height="45dp"
                android:text="400.00€"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llum">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="GPS: "
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:tag="/0.0/GPS no inclòs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true"
            android:layout_weight="1"
            android:text="No" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="Samsung Ultra/350.0/Samsung ultra gps titani"
            android:text="Samsung ultra GPS"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="350.00€"
            android:textAlignment="gravity" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/portabidons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gps">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Portabidons: "
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:tag="/0.0/Portabidons no inclòs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="true"
            android:text="No" />

        <RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="Shimano/25.0/Portabidons doble Shimano carbono"
            android:text="Shimano"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="25.00€"
            android:textAlignment="gravity" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complements"
        android:textColor="#690B0B"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/llum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="acceptar"
        android:text="Acceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portabidons"
        app:layout_constraintVertical_bias="0.948" />

</androidx.constraintlayout.widget.ConstraintLayout>